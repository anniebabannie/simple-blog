---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Create a new post">
  <nav class="px-7 py-8">
    <a href="/" class="text-rose-500 text-lg inline-block">&#8592; Go back home</a>
  </nav>
  <header class="text-center py-20">
    <h1>Create a new post</h1>
  </header>
  <main class="mx-auto max-w-[700px] px-10 mb-40">
    <form action="/api/posts" method="post" class="flex flex-col gap-8">
      <div class="flex flex-col">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" required>
      </div>
      <div class="flex flex-col">
        <label for="body">Body</label>
        <textarea id="body" name="body" required rows="10" placeholder="Write your blog post here..."></textarea>
      </div>
      <button type="submit">Create post</button>
    </form>
  </main>
</Layout>